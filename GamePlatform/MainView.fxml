<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
    prefHeight="1080.0" prefWidth="1920.0" 
    style="-fx-background-color: #f5f5f5;"
    xmlns="http://javafx.com/javafx/8" 
    xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="MainController">
    
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 1);">
            <TextField fx:id="usernameField" promptText="Username" 
                style="-fx-background-radius: 20; -fx-padding: 8 15;"/>
            <PasswordField fx:id="passwordField" promptText="Password"
                style="-fx-background-radius: 20; -fx-padding: 8 15;"/>
            <Button fx:id="loginButton" text="Login" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 8 25;"
                onAction="#handleLogin"/>
            <Button fx:id="signupButton" text="Sign Up"
                style="-fx-background-color: transparent; -fx-text-fill: #4CAF50; -fx-border-color: #4CAF50; -fx-border-radius: 20; -fx-background-radius: 20; -fx-padding: 8 25;"
                onAction="#handleSignup"/>
            <Button fx:id="languageButton" text="中文"
                style="-fx-background-color: transparent; -fx-text-fill: #666; -fx-background-radius: 20; -fx-padding: 8 15;"
                onAction="#handleLanguageToggle"/>
        </HBox>
    </top>
    
    <center>
        <VBox alignment="CENTER" spacing="30">
            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>
            
            <Label text="Game Center" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            
            <GridPane alignment="CENTER" hgap="30" vgap="30">
                <Button fx:id="snakeButton" text="Snake" 
                    prefWidth="200" prefHeight="200"
                    style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
                    onAction="#handleGameSelect" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Button fx:id="game2Button" text="Game 2"
                    prefWidth="200" prefHeight="200"
                    style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
                    onAction="#handleGameSelect" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Button fx:id="game3Button" text="Game 3"
                    prefWidth="200" prefHeight="200"
                    style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
                    onAction="#handleGameSelect" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <Button fx:id="game4Button" text="Game 4"
                    prefWidth="200" prefHeight="200"
                    style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
                    onAction="#handleGameSelect" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                <Button fx:id="addGameButton" text="+" 
                    prefWidth="200" prefHeight="200"
                    style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
                    onAction="#handleAddGame" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
            </GridPane>
        </VBox>
    </center>
    
    <right>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), -10, 0, 0, 0);">
            <Button fx:id="bugReportButton" text="Bug Report"
                style="-fx-background-color: transparent; -fx-text-fill: #666; -fx-background-radius: 20; -fx-padding: 10 30;"
                onAction="#handleBugReport"/>
            <Button fx:id="reviewButton" text="Review"
                style="-fx-background-color: transparent; -fx-text-fill: #666; -fx-background-radius: 20; -fx-padding: 10 30;"
                onAction="#handleReview"/>
            <Button fx:id="developerButton" text="Developer Login"
                style="-fx-background-color: transparent; -fx-text-fill: #666; -fx-background-radius: 20; -fx-padding: 10 30;"
                onAction="#handleDeveloperLogin"/>
        </VBox>
    </right>
</BorderPane> 