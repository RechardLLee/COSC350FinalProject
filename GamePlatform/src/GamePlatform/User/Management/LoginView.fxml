<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500" prefWidth="400" spacing="20" style="-fx-background-color: khaki;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="GamePlatform.User.Management.LoginController">
    
    <padding>
        <Insets bottom="40" left="30" right="30" top="40" />
    </padding>
    
    <Label fx:id="titleLabel" style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: SLATEGREY;" text="Steinwand Gaming Emporium" textFill="SLATEGREY" />
    
    <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;">
        <VBox spacing="5">
            <Label text="Username" />
            <TextField fx:id="usernameField" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 8;" />
        </VBox>
        
        <VBox spacing="5">
            <Label text="Password" />
            <PasswordField fx:id="passwordField" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 8;" />
        </VBox>
        
        <Button fx:id="loginButton" maxWidth="Infinity" onAction="#handleLogin" style="-fx-background-color: SLATEGREY; -fx-text-fill: white; -fx-background-radius: 25; -fx-padding: 12 0; -fx-font-size: 14;" text="Login" />
            
        <Button fx:id="signupButton" maxWidth="Infinity" onAction="#handleSignup" style="-fx-background-color: transparent; -fx-text-fill: SLATEGREY; -fx-background-radius: 25; -fx-padding: 12 0; -fx-font-size: 14;" text="Sign Up" />
    </VBox>
    
    <Button fx:id="languageButton" onAction="#handleLanguageToggle" style="-fx-background-color: transparent; -fx-text-fill: #666;" text="中文" />
</VBox>
