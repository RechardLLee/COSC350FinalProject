<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="30" prefWidth="800" prefHeight="600"
    style="-fx-background-color: #f5f5f5;"
    xmlns:fx="http://javafx.com/fxml" fx:controller="GameViewController">
    
    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>
    
    <Label fx:id="titleLabel" text="Snake" 
        style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #333;"/>
    
    <HBox alignment="CENTER" spacing="40">
        <VBox alignment="CENTER" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <ImageView fx:id="gameIcon" fitWidth="300" fitHeight="300"/>
        </VBox>
        
        <VBox spacing="20" prefWidth="400">
            <TextArea fx:id="gameDescription" prefHeight="200" wrapText="true"
                style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: transparent;"/>
            
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Button fx:id="buyButton" text="Buy Game" 
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 30;"
                    onAction="#handleBuyGame"/>
                <Button fx:id="downloadButton" text="Download"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 30;"
                    onAction="#handleDownload"/>
                <Button fx:id="startButton" text="Start Game"
                    style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 30;"
                    onAction="#handleStartGame"/>
            </HBox>
        </VBox>
    </HBox>
</VBox> 